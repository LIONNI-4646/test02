    <h1>ğŸ“Š å®¶è¨ˆç°¿ãƒ„ãƒ¼ãƒ«</h1>

    <div class="card">
        <h2>ãƒ‡ãƒ¼ã‚¿ã‚’å…¥åŠ›</h2>
        <input type="date" id="date">
        <input type="text" id="category" placeholder="ã‚«ãƒ†ã‚´ãƒªï¼ˆé£Ÿè²»ã€äº¤éš›è²»ãªã©ï¼‰">
        <input type="number" id="amount" placeholder="é‡‘é¡ï¼ˆå††ï¼‰">
        <button onclick="addData()">ä¿å­˜ã™ã‚‹</button>
    </div>

    <div class="card">
        <h2>æ”¯å‡ºã®å‰²åˆ</h2>
        <canvas id="myChart"></canvas>
    </div>

    <div class="card">
        <h2>å±¥æ­´</h2>
        <div id="historyList"></div>
        <button onclick="clearData()" style="background: #dc3545; font-size: 0.8em; margin-top: 20px;">ãƒ‡ãƒ¼ã‚¿ã‚’å…¨æ¶ˆå»</button>
    </div>

    <script>
        let myChart;
        let records = JSON.parse(localStorage.getItem('kakeibo_data')) || [];

        // åˆæœŸè¡¨ç¤º
        window.onload = () => {
            document.getElementById('date').valueAsDate = new Date();
            updateUI();
        };

        // ãƒ‡ãƒ¼ã‚¿è¿½åŠ 
        function addData() {
            const date = document.getElementById('date').value;
            const category = document.getElementById('category').value;
            const amount = parseInt(document.getElementById('amount').value);

            if (!category || !amount) return alert("å…¥åŠ›ã—ã¦ãã ã•ã„");

            records.push({ date, category, amount });
            localStorage.setItem('kakeibo_data', JSON.stringify(records));
            
            document.getElementById('category').value = '';
            document.getElementById('amount').value = '';
            updateUI();
        }

        // UIã¨ã‚°ãƒ©ãƒ•ã®æ›´æ–°
        function updateUI() {
            const list = document.getElementById('historyList');
            list.innerHTML = '';
            const summary = {};

            // å±¥æ­´ã®ä½œæˆã¨é›†è¨ˆ
            records.slice().reverse().forEach(r => {
                list.innerHTML += `<div class="list-item"><span>${r.date} [${r.category}]</span> <span>Â¥${r.amount.toLocaleString()}</span></div>`;
                summary[r.category] = (summary[r.category] || 0) + r.amount;
            });

            // ã‚°ãƒ©ãƒ•ã®æç”»
            const ctx = document.getElementById('myChart').getContext('2d');
            if (myChart) myChart.destroy();
            myChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(summary),
                    datasets: [{
                        data: Object.values(summary),
                        backgroundColor: ['#ff6384', '#36a2eb', '#cc65fe', '#ffce56', '#4bc0c0']
                    }]
                }
            });
        }

        function clearData() {
            if(confirm("ãƒ‡ãƒ¼ã‚¿ã‚’ã™ã¹ã¦æ¶ˆå»ã—ã¾ã™ã‹ï¼Ÿ")) {
                localStorage.removeItem('kakeibo_data');
                records = [];
                updateUI();
            }
        }
    </script>
